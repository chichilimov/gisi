doctype html
html lang="en" 
  head
    meta charset="utf-8" /
    meta content="IE=edge" http-equiv="X-UA-Compatible" /
    meta content="width=1280" name="viewport" /

    title Официальный портал города Ростова-на-Дону

    /! FONTS
    link href='https://fonts.googleapis.com/css?family=Roboto:400,100,500,700,400italic&subset=latin,cyrillic' rel='stylesheet' type='text/css' /

    /! CSS
    link href="css/interface.css" rel="stylesheet" /

  /! HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
  /![if lt IE 9]
      | <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script
      | <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script

  body

    .body-wrap

      header
        include partials/_header-extended.slim

      .crate.page
        h1 Интернет-приемная
        form
          .col-half
            .form-control
              .col-label
                label.control-label for="i1" Фамилия
              .col-input
                input.form-element id="i1" type="text"
            .form-control
              .col-label
                label.control-label for="i2" Имя
              .col-input
                input.form-element id="i2" type="text"
            .form-control
              .col-label
                label.control-label for="i3" Отчество
              .col-input
                input.form-element id="i3" type="text"
            .form-control
              .col-label
                label.control-label for="i4" Телефон
              .col-input
                input.form-element id="i4" type="tel"
            .form-control
              .col-label
                label.control-label for="i5" E-mail
              .col-input
                input.form-element id="i5" type="email"
            .form-control.has-error
              .col-label
                label.control-label for="i6" Адрес
              .col-input
                input.form-element id="i6" type="text"

          .col-half
            .form-control
              .col-label
                label.control-label for="i7" Кому
              .col-input
                select.form-element id="i7"
                  option Выберите адресата
                  option 1
                  option 2
                  option 3
            .form-control
              .col-label
                label.control-label for="i8" Текст обращения
              .col-input
                textarea.form-element id="i8" rows="7"
            .form-control
              .col-label
                label.control-label for="i9" Прикрепить файл
              .col-input
                input.form-element id="i9" type="file"


          .col-full
            .pull-right.text-right
              .form-control
                label.checkbox
                  input type="checkbox" name=""
                  | Я согласен получить бумажную копию ответа
              button.btn.base-color href="" type="submit" Отправить

    include partials/_footer.slim

    /! SCRIPTS
    script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"
    script src="js/interface.js"
